  -H "Content-Type: application/json" \
  -d '{
    "userId": null,
    "documentType": "DNI",
    "documentNumber": "12345678",
    "firstName": "Juan",
    "lastName": "Pérez",
    "birthDate": "1990-01-01T00:00:00.000Z",
    "gender": "Male",
    "address": "Av. Test 123",
    "phone": "+51999888777",
    "email": "juan@test.com",
    "emergencyContact": "+51999888776"
  }'

