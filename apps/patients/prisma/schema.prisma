generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  Male
  Female
  Other
}

enum Status {
  active
  archived
}

model Patient {
  patientId        Int      @id @default(autoincrement()) @db.Integer
  userId           Int
  documentType     String
  documentNumber   String   @unique
  firstName        String
  lastName         String
  birthDate        DateTime
  gender           Gender
  address          String
  phone            String   @unique
  email            String   @unique
  emergencyContact String
  createdAt        DateTime @default(now())
  status           Status
}